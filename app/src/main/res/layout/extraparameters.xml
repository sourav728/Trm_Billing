<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_extra_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Number"/>

        <EditText
            android:id="@+id/et_extra_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Enter Mobile Number"
            android:inputType="number"
            android:maxLength="10"/>

        <TextView
            android:id="@+id/txt_extra_aadhaar_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Aadhaar Number"/>

        <EditText
            android:id="@+id/et_extra_aadhaar_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Enter Aadhaar Number"
            android:inputType="number"
            android:maxLength="12"/>

        <TextView
            android:id="@+id/txt_extra_email_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Email Address"/>

        <EditText
            android:id="@+id/et_extra_email_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Enter Email Address"
            android:inputType="textEmailAddress"/>

        <TextView
            android:id="@+id/txt_election_card_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Election Card No"/>

        <EditText
            android:id="@+id/et_election_card_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Enter Election Card No"
            android:inputType="text"/>

        <TextView
            android:id="@+id/txt_ration_card_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Ration Card No"/>

        <EditText
            android:id="@+id/et_ration_card_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Enter Ration Card No"
            android:inputType="text"/>

        <TextView
            android:id="@+id/txt_water_connection_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Water Connection No"/>

        <EditText
            android:id="@+id/et_water_card_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Enter Water Connection No"
            android:inputType="text"/>

        <TextView
            android:id="@+id/txt_house_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="House No"/>

        <EditText
            android:id="@+id/et_house_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Enter House No"
            android:inputType="text"/>

    </LinearLayout>
</ScrollView>