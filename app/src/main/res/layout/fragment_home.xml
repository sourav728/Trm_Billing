<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/background"
    android:orientation="vertical">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Billing"
            android:textColor="#FFC107"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold|italic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:textColor="#FAFAFA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Total"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/textView3"
                android:textColor="#FAFAFA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>

            <TextView
                android:id="@+id/textView4"
                android:textColor="#FAFAFA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </LinearLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Enter for Billing"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Billing Status in Chart"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Billing Status in Maps"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="TC Billing"/>

        <Button
            android:id="@+id/ht_billing_btn"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="HT Billing"/>

        <Button
            android:id="@+id/solar_billing_btn"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Solar Roof Billing"
            android:visibility="visible"/>
        <Button
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:text="Demo"
            android:visibility="gone"/>
        <Button
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:text="Demo"
            android:visibility="gone"/>

</LinearLayout>